<Window x:Class="_24._09._2023_Введение_в_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_24._09._2023_Введение_в_WPF"
        mc:Ignorable="d"
        Title="Magic 8 ball" Height="350" Width="400" Background="Gray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="textBox" Grid.Row="0" Margin="10" Background="LightGray" KeyUp="textBox_KeyUp"/>
        <Button x:Name="answer" Grid.Row="1" Content="Ответ на вопрос" Width="120" Margin="10" HorizontalAlignment="Left" Click="answer_Click" Background="#FFE9E9E9" Foreground="Black" FontSize="14"/>
        <TextBlock x:Name="textBlock" Grid.Row="2" Margin="10" Background="LightGray"/>

    </Grid>
</Window>
